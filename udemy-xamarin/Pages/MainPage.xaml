<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Inicio de Sesión"
             x:Class="udemy_xamarin.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
           
           
        </ResourceDictionary>
        
        
    </ContentPage.Resources>

    <StackLayout Margin="10" VerticalOptions="Center">

        <Label Text="Bienvenido a la Aplicación" Style="{StaticResource estiloLabel}" TextColor="#6c757d" FontSize="30"/>

        <Image Source="atom.jpg"
               WidthRequest="200"
               HeightRequest="200"
               />

        <Label Text="Usuario" Style="{StaticResource estiloLabel}"/>

        <Entry Keyboard="Text"  Text="{Binding nombreusuario}"/>

        <Label Text="Contraseña"  Style="{StaticResource estiloLabel}"/>

        <Entry IsPassword="True"  Text="{Binding contra}"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

        <Button x:Name="btnIniciar" Clicked="btnIniciar_Clicked" Text="Iniciar"  Style="{StaticResource colorVerde}"/>
            <Button  x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" Style="{StaticResource colorAzul}"/>
            
        </StackLayout>
        




    </StackLayout>

</ContentPage>
